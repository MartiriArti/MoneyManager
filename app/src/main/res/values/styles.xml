<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>

    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="splashActivity">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="SignUp">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:maxLength">10</item>
        <item name="android:background">@color/back</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:layout_marginBottom">6dp</item>
    </style>

    <style name="DialogAnim">
        <item name="android:windowEnterAnimation">@anim/enter_pull_in</item>
        <item name="android:windowExitAnimation">@anim/push_out_left</item>
    </style>

    <style name="SettingsTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
    </style>

    <style name="UserRegistrationEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/registration_text_size</item>
        <item name="android:maxLength">10</item>
        <item name="android:background">@color/back</item>
        <item name="android:paddingTop">@dimen/edit_text_padding_vertical</item>
        <item name="android:paddingBottom">@dimen/edit_text_padding_vertical</item>
        <item name="android:paddingLeft">@dimen/edit_text_padding_horizontal</item>
        <item name="android:paddingRight">@dimen/edit_text_padding_horizontal</item>
        <item name="android:layout_marginTop">@dimen/edit_text_margin_vertical</item>
        <item name="android:layout_marginBottom">@dimen/edit_text_margin_vertical</item>
    </style>

    <style name="UserRegistrationButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/buttons_padding</item>
        <item name="android:background">@drawable/button</item>
        <item name="android:textColor">@color/back</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">@dimen/registration_text_size</item>
    </style>

    <style name="SignInButton" parent="UserRegistrationButton">
        <item name="android:background">@drawable/button_sign_in_google</item>
        <item name="android:paddingLeft">@dimen/default_layout_padding</item>
        <item name="android:drawableLeft">@mipmap/ic_google_plus_white_24dp</item>
    </style>

    <style name="CheckBox">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/back</item>
        <item name="android:textSize">@dimen/check_text_size</item>
        <item name="android:layout_marginTop">@dimen/check_box_margin_top</item>
    </style>

    <style name="AddExpenseEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/reg_text_size</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="AddExpenseButtons">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/buttons_layout_height</item>
        <item name="android:minWidth">@dimen/buttons_min_width</item>
        <item name="android:background">@color/back</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>


    <dimen name="registration_text_size">16sp</dimen>
    <dimen name="edit_text_padding_vertical">8dp</dimen>
    <dimen name="edit_text_padding_horizontal">6dp</dimen>
    <dimen name="edit_text_margin_vertical">6dp</dimen>
    <dimen name="buttons_padding">8dp</dimen>
    <dimen name="check_text_size">14sp</dimen>
    <dimen name="check_box_margin_top">24dp</dimen>


</resources>
